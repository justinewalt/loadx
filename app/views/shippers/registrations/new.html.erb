<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :company_name %>
    <%= f.text_field :company_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>

  <div class="field">
    <%= f.label :sub_district %>
    <%= f.text_field :sub_district %>
  </div>

  <div class="field">
    <%= f.label :district %>
    <%= f.text_field :district %>
  </div>

  <div class="field">
    <%= f.label :province %>
    <%= f.text_field :province %>
  </div>

  <div class="field">
    <%= f.label :StreetAddress %>
    <%= f.text_field :StreetAddress %>
  </div>

  <div class="field">
    <%= f.label :Country %>
    <%= f.text_field :Country %>
  </div>

  <div class="field">
    <%= f.label :PostalCode %>
    <%= f.text_field :PostalCode %>
  </div>

  <div class="field">
    <%= f.label :OfficePhone %>
    <%= f.text_field :OfficePhone %>
  </div>

  <div class="field">
    <%= f.label :ContactPerson %>
    <%= f.text_field :ContactPerson %>
  </div>

  <div class="field">
    <%= f.label :TaxId %>
    <%= f.text_field :TaxId %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "shippers/shared/links" %>
